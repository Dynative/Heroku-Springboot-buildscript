#!/usr/bin/env bash

BUILD_DIR=${1:-}
ENV_DIR=${3:-}

URL=`cat ${NEO_URL}`
USERNAME=`cat ${NEO_USERNAME}`
PASSWORD=`cat ${NEO_PASSWORD}`

echo "test-------------"

cat $ENV_DIR/NEO_PASSWORD
cat $ENV_DIR/NEO_USERNAME
cat $ENV_DIR/NEO_URL

echo "test-------------"

echo "spring.neo4j.uri=${URL}" > ${BUILD_DIR}/src/main/application.properties

echo "spring.neo4j.authentication.username=${USERNAME}" >> ${BUILD_DIR}/src/main/application.properties

echo "spring.neo4j.authentication.password=${PASSWORD}" >> ${BUILD_DIR}/src/main/application.properties