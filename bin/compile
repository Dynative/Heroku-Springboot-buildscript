#!/usr/bin/env bash

BUILD_DIR=${1:-}
CACHE_DIR=${2:-}
ENV_DIR=${3:-}

URL=`cat ${NEO_URL}`
USERNAME=`cat ${NEO_USERNAME}`
PASSWORD=`cat ${NEO_PASSWORD}`

ls $ENV_DIR

echo "spring.neo4j.uri=${URL}" > ./src/main/application.properties

echo "spring.neo4j.authentication.username=${USERNAME}" >> ./src/main/application.properties

echo "spring.neo4j.authentication.password=${PASSWORD}" >> ./src/main/application.properties